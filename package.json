{
  "name": "gemini-nano-translator",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run build --watch",
    "build": "bun run build:content && bun run build:background",
    "build:content": "bun build src/content/index.tsx --outdir=dist/content --target=browser",
    "build:background": "bun build src/background/service-worker.ts --outdir=dist/background --target=browser",
    "test": "bun test"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/chrome": "^0.0.260",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.1.5",
    "@happy-dom/global-registrator": "^14.3.1",
    "typescript": "^5.3.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
